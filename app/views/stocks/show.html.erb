<% begin %>
 <% @stock = StockQuote::Stock.quote(@stock.ticker) %>
<% rescue StandardError %>
 <% @error = "That Stock Symbol Doesn't Exist... please try agian." %>
<% end %>
<br><br>

<div class="card">
	<div class="card-header">
		<strong><%= @stock.name %> - <%= @stock.symbol %></strong>
	</div>
	<div class="card-body">
		<div class="text-left">
			<h1>$<%= @stock.l %></h1><br>
					
			<strong>Earnings Per Share: </strong>$<%= @stock.eps %><br>
			<strong>Price/Earning Ratio: </strong>$<%= @stock.pe %><br>
			<strong>Market Cap: </strong>$<%= @stock.mc %><br>
			<strong>Stock Open: </strong>$<%= @stock.op %><br>
			<strong>Day's Range: </strong>$<%= @stock.lo %> - $<%= @stock.hi %><br>
			<strong>Year High: </strong>$<%= @stock.hi52 %><br>
			<strong>Year Low: </strong>$<%= @stock.lo52 %><br>
		</div>
		<br>
		<div class="float-right">
			<%= @stock.summary[0]["overview"] %>
		</div>
	</div>
		
	<div class="card-footer text-center">
		<%= link_to 'Edit', edit_stock_path %> |
		<%= link_to 'Delete', stock_path, method: :delete, data: { confirm: 'Are you sure?' } %> |
		<%= link_to 'Back', stocks_path %>
	</div>
</div>

<br><br>


